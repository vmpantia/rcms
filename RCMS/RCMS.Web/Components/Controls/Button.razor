<MudButton ButtonType="Type"
           Variant="Variant"
           Color="Color"
           FullWidth="IsFullWidth"
           Disabled="IsDisabled">
    @if (IsLoading)
    {
        <MudProgressCircular Class="ms-n1" Size="LoadingSize" Indeterminate="true"/>
        <MudText Class="ms-2">@LoadingText</MudText>
    }
    else
    {
        <MudText>@Text</MudText>
    }
</MudButton>

@code {
    [Parameter] public ButtonType Type { get; set; } = ButtonType.Button;
    [Parameter] public Variant Variant { get; set; } = Variant.Filled;
    [Parameter] public Color Color { get; set; } = Color.Primary;
    [Parameter] public bool IsFullWidth { get; set; } = true;
    [Parameter] public bool IsDisabled { get; set; }
    [Parameter] public string Text { get; set; }
    [Parameter] public string LoadingText { get; set; }
    [Parameter] public bool IsLoading { get; set; }
    [Parameter] public Size LoadingSize { get; set; } = Size.Small;
}