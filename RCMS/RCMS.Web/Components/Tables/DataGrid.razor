@typeparam TData 

@if (Toolbar is not null)
{
    <div class="d-flex mb-3">
        @Toolbar
    </div>
}

<MudDataGrid Items="Items"
             Loading="IsLoading"
             Dense="true"
             Hover="true"
             MultiSelection="IsMultipleSelection"
             SelectedItems="SelectedItems">
    <Columns>
        @if (IsMultipleSelection)
        {
            <SelectColumn T="TData" />
        }
        @Columns
    </Columns>
    <PagerContent>
        <MudDataGridPager T="TData"/>
    </PagerContent>
    <NoRecordsContent>
        <MudText>No record found at this moment.</MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>Loading...</MudText>
    </LoadingContent>
</MudDataGrid>

@code {
    
    [Parameter] public IEnumerable<TData> Items { get; set; }
    [Parameter] public HashSet<TData> SelectedItems { get; set; }
    [Parameter] public RenderFragment Columns { get; set; }
    [Parameter] public RenderFragment? Toolbar { get; set; }
    [Parameter] public bool IsMultipleSelection { get; set; }    
    [Parameter] public bool IsLoading { get; set; }    
}