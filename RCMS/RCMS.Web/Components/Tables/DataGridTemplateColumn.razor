@typeparam TData 

<TemplateColumn T="TData"
                Title="@Title"
                Sortable="@IsSortable"
                SortBy="@SortBy"
                CellClass="@CssClass">
    <CellTemplate>
        @ChildContent(context.Item)
    </CellTemplate>
</TemplateColumn>

@code {
    
    [Parameter] public string Title { get; set; }
    [Parameter] public string CssClass { get; set; }
    [Parameter] public bool IsSortable { get; set; }
    [Parameter] public Func<TData, object>? SortBy { get; set; }
    [Parameter] public RenderFragment<TData> ChildContent { get; set; }

}